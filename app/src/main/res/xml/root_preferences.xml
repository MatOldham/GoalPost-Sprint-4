<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Account"
        app:icon="@drawable/ic_account_circle">

        <Preference
            app:key="change_username"
            app:title="Change Username" />

        <Preference
            app:key="change_password"
            app:title="Change Password"
            app:summary="Change your password" />

        <Preference
            app:key="logout"
            app:title="Logout"
            app:summary="Logout from your account" />

        <Preference
            app:key="delete_account"
            app:title="Delete Account"
            app:summary="Permanently delete your account" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Settings"
        app:icon="@drawable/ic_settings">

        <CheckBoxPreference
            app:key="notifications"
            app:title="Notifications"
            app:summaryOn="Notifications are enabled"
            app:summaryOff="Notifications are disabled"/>

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="Dark Mode"
            app:summaryOn="Dark mode enabled"
            app:summaryOff="Dark mode disabled"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Support"
        app:icon="@drawable/ic_support">

        <Preference
            app:key="contact_us"
            app:title="Contact Us"
            app:summary="Send a question, comment, or concern" />

    </PreferenceCategory>

</PreferenceScreen>